<table class="table table-condensed">
    <thead>
        <tr>
            <th data-field="id">Name</th>
            <th data-field="name">Description</th>
        </tr>
    </thead>
    <tbody>
      <% unless @items.blank? %>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.name %></td>
            <td><%= item.description %></td>
          </tr>
        <% end %>
      <% else %>
        No Items
      <% end %>
    </tbody>
</table>